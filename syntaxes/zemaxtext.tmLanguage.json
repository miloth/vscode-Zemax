{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Zemax",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#classes"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.zemaxtext",
          "match": "\\!.*\\n"
        },
        {
          "name": "comment.line.number-sign.zemaxtext",
          "match": "^VERS|BLNK.*\\n"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.class.control.zemaxtext",
          "match": "^(MATE|COAT|IDEAL2|IDEAL|TABLE|NM|DMFS|ENCRYPTED)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.parameter.zemaxtext",
          "match": "^(ANGL|WAVE|ED|CD|TD|OD|LD|IT)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.zemaxtext",
          "match": "\\b-?[\\d.]+(?:E|e-?\\d+)?\\b"
        },
        {
          "name": "constant.other.zemaxtext",
          "match": "\\b[a-zA-Z][a-zA-Z0-9_-]+\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.zemaxtext",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.zemaxtext",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.zemax"
}
